{
  "compilerOptions": {
    // 1. Processa anche file .js/.jsx
    "allowJs": true,

    // 2. Genera solo i file di dichiarazione (.d.ts), non produce JS
    "declaration": true,
    "emitDeclarationOnly": true,

    // 3. Metti i .d.ts in dist/
    "declarationDir": "dist",
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true
  },


  "include": [
    "src/**/*.js",
    "src/**/*.jsx"
  ],


  "exclude": [
    "node_modules",
    "dist"
  ]
}